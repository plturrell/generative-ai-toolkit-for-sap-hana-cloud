{
  "version": 2,
  "buildCommand": "pip install -r api/requirements-vercel.txt",
  "outputDirectory": "public",
  "env": {
    "API_HOST": "0.0.0.0",
    "API_PORT": "8000",
    "LOG_LEVEL": "INFO",
    "LOG_FORMAT": "json",
    "AUTH_REQUIRED": "true",
    "PROMETHEUS_ENABLED": "true",
    "RATE_LIMIT_PER_MINUTE": "100",
    "CONNECTION_POOL_SIZE": "20",
    "REQUEST_TIMEOUT_SECONDS": "60",
    "MAX_REQUEST_SIZE_MB": "10",
    
    "ENABLE_GPU_ACCELERATION": "true",
    "ENABLE_TOGETHER_AI": "true",
    "TOGETHER_API_KEY": "8c2b1633069ad5a567299c19acb8db9cb2e0098d78d24556b1749f0149fcc729",
    "TOGETHER_DEFAULT_MODEL": "meta-llama/Llama-2-70b-chat-hf",
    "TOGETHER_DEFAULT_EMBEDDING_MODEL": "togethercomputer/m2-bert-80M-8k-retrieval",
    "TOGETHER_TIMEOUT": "60.0",
    
    "ENABLE_TENSORRT": "false",
    "ENABLE_TRANSFORMER_ENGINE": "false",
    "ENABLE_GPTQ": "false",
    "ENABLE_AWQ": "false",
    "ENABLE_FP8": "false",
    "ENABLE_FLASH_ATTENTION": "false",
    
    "ENVIRONMENT": "production",
    "DEVELOPMENT_MODE": "false",
    "CORS_ORIGINS": "https://*.vercel.app,https://*.sap.com",
    "ENFORCE_HTTPS": "true",
    "RESTRICT_EXTERNAL_CALLS": "false",
    "DOMAIN_SPECIFIC_CALIBRATION": "true"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true,
    "enabled": true
  },
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; connect-src 'self'; img-src 'self'; style-src 'self';"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index.py"
    },
    {
      "source": "/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/metrics",
      "destination": "/api/metrics.py"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}