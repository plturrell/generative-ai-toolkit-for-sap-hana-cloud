{
  "version": 2,
  "buildCommand": "pip install -r api/requirements.txt",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.py": {
      "runtime": "vercel-python@3.9",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "API_HOST": "0.0.0.0",
    "API_PORT": "8000",
    "LOG_LEVEL": "INFO",
    "LOG_FORMAT": "json",
    "AUTH_REQUIRED": "true",
    "PROMETHEUS_ENABLED": "true",
    "RATE_LIMIT_PER_MINUTE": "100",
    "CONNECTION_POOL_SIZE": "20",
    "REQUEST_TIMEOUT_SECONDS": "60",
    "MAX_REQUEST_SIZE_MB": "10",
    
    "ENABLE_GPU_ACCELERATION": "true",
    "ENABLE_TENSORRT": "true",
    "ENABLE_TRANSFORMER_ENGINE": "true",
    "ENABLE_GPTQ": "true",
    "ENABLE_AWQ": "true",
    "DEFAULT_QUANT_METHOD": "gptq",
    "QUANTIZATION_BIT_WIDTH": "4",
    "ENABLE_FP8": "true",
    "ENABLE_FLASH_ATTENTION_2": "true",
    "CUDA_MEMORY_FRACTION": "0.85",
    "QUANTIZATION_CACHE_DIR": "/tmp/quantization_cache",
    
    "ENVIRONMENT": "production",
    "DEVELOPMENT_MODE": "false",
    "CORS_ORIGINS": "https://*.vercel.app,https://*.sap.com",
    "ENFORCE_HTTPS": "true",
    "RESTRICT_EXTERNAL_CALLS": "true",
    "DOMAIN_SPECIFIC_CALIBRATION": "true"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true,
    "enabled": true
  },
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; connect-src 'self'; img-src 'self'; style-src 'self';"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index.py"
    },
    {
      "source": "/health",
      "destination": "/api/health.py"
    },
    {
      "source": "/metrics",
      "destination": "/api/metrics.py"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
}